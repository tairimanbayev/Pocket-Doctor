<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.pocketdoc">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.project.pocketdoc.ui.activities.EditProfileActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="" />
        <activity
            android:name="com.project.pocketdoc.ui.activities.IllnessesActivity"
            android:label="" />
        <activity
            android:name="com.project.pocketdoc.ui.activities.VisitActivity"
            android:label="" />
        <activity
            android:name="com.project.pocketdoc.ui.activities.VisitDetailedActivity"
            android:label="" />
        <activity
            android:name="com.project.pocketdoc.ui.activities.HistoryActivity"
            android:label="" />
        <activity
            android:name="com.project.pocketdoc.ui.activities.PillsActivity"
            android:label="" />
        <activity
            android:name="com.project.pocketdoc.ui.activities.CreatePillsActivity"
            android:label="" />
        <activity
            android:name="com.project.pocketdoc.ui.activities.CardIllnessesActivity"
            android:label="" />
        <activity
            android:name="com.project.pocketdoc.ui.activities.PatientDetailsActivity"
            android:label="" />
        <activity
            android:name="com.project.pocketdoc.ui.activities.MainActivity"
            android:label=""
            android:launchMode="singleTask" />
        <activity
            android:name="com.project.pocketdoc.ui.activities.LoginActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.project.pocketdoc.services.FirebaseMsgService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>